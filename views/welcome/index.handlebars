<h1>Photo Gallery: Powered by YOU + s3 <3</h1>

<!-- upload form -->

<form action="/photos" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="photo_file">Photo File</label>
    <input type="file" class="form-control" name="photo[file]" id="photo_file">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>




<!-- photo gallery -->



<header class="page-header">
  <h1>Photos Index</h1>
</header>


{{#if (isEmpty photos) }}
  <p class="text-danger">No Photos :(</p>
{{else }}
  <div class="row">
    {{#each photos as |photo| }}
      <div class="col-xs-4">
        <a
          href="/photos/{{ photo.name }}?_method=delete"
          class="text-danger">
          &times;
        </a>
        <p>{{ photo.name }}</p>
        <img src="{{ photo.url }}" alt="Photo" class="img-responsive">
      </div>
    {{/each }}
  </div>
{{/if }}
